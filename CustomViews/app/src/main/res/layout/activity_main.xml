<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nyc.c4q.customviews.MainActivity">


    <nyc.c4q.customviews.BouncingBall
        android:id="@+id/ball1"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <nyc.c4q.customviews.BouncingBall
        android:id="@+id/ball2"
        android:layout_width="50dp"
        android:layout_below="@id/ball1"
        android:layout_height="50dp"
        android:layout_margin="5dp"/>

    <nyc.c4q.customviews.BouncingBall
        android:id="@+id/ball3"
        android:layout_width="50dp"
        android:layout_below="@id/ball1"
        android:layout_toRightOf="@id/ball2"
        android:layout_height="50dp"
        app:radius="5dp"
        android:layout_margin="5dp"/>

    <nyc.c4q.customviews.BouncingBall
        android:id="@+id/ball4"
        android:layout_width="50dp"
        android:layout_below="@id/ball1"
        android:layout_toRightOf="@id/ball3"
        android:layout_height="50dp"
        app:radius="7dp"
        app:xSpeed="0dp"
        app:ySpeed="2dp"
        android:layout_margin="5dp"/>

    <nyc.c4q.customviews.BouncingBall
        android:id="@+id/ball5"
        android:layout_width="60dp"
        android:layout_below="@id/ball3"
        android:layout_toRightOf="@id/ball3"
        android:layout_height="90dp"
        app:radius="7dp"
        app:xSpeed="5dp"
        app:ySpeed="2dp"
        app:color="#FF00FF00"
        android:layout_margin="5dp"/>

</RelativeLayout>
